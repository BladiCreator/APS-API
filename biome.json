{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noConsoleLog": "warn"
			},
			"nursery": {
				"noUnusedImports": "error",
				"noThenProperty": "warn",
				"useAwait": "warn",
				"noEmptyTypeParameters": "error",
				"noGlobalEval": "error",
				"noInvalidUseBeforeDeclaration": "error"
			}
		},
		"ignore": [
			"dist/",
			"node_modules/",
			"coverage/"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": [
			"dist/",
			"coverage/",
			"node_modules/",
			"tsconfig.json",
			"tsconfig.prod.json"
		]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"arrowParentheses": "always",
			"jsxQuoteStyle": "double",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingComma": "all",
			"quoteProperties": "asNeeded",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**"
		],
		"include": [
			"**/*.ts",
			"**/*.js",
			"**/*.json"
		]
	}
}